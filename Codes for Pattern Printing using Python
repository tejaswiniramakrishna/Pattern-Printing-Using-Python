#Program to print half pyramid 

n = int(input("Enter the number of rows: "))  
# outer for loop to handle number of rows  
for i in range(0, n):  
    # inner for loop to handle number of columns  
    for j in range(0, i + 1):
        print("* ", end="")     
    print() # ending line after each row 
    
    
    
#Shortcut program to print half pyramid 

n = int(input("Enter the number of rows: "))   
for i in range(1, n + 1): 
  print("* "*i)   
  
  
  
#Program to print inverted half pyramid

n = int(input("Enter number of rows: "))
# outer for loop to handle number of rows  
for i in range(n, 0, -1):
# inner for loop to handle number of columns    
    for j in range(0, i):
        print("*", end=" ")
    print()
    
    

#Shortcut program to print inverted half pyramid 

n = int(input("Enter the number of rows: "))   
for i in range(n, 0, -1): 
  print("* "*i) 
